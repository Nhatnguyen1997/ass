<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-image: url('https://media.licdn.com/dms/image/C4E12AQH4tTbOoISCxQ/article-inline_image-shrink_1500_2232/0/1520191162605?e=1704326400&v=beta&t=XPMqqNBkBNsCfCcOF4aB-bu_XdslKetcDSochsgSK3k');
            background-size: cover;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
    </style>
</head>

<body>
    <%- include('../Screen/Navbar.ejs') -%>
        <div class="container   ">
            <h1 class="pagination justify-content-center " style="margin-top: 250px;">INSERT PRODUCT</h1>
            <form id="SubmitinsertProduct" class="was-validated"  enctype="multipart/form-data">
                <div class="mb-3 mt-3">
                    <label for="uname" class="form-label">Name Product:</label>
                    <input type="text" class="form-control" id="name" placeholder="Name Product..." name="name"
                        required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <div class="mb-3">
                    <label for="pwd" class="form-label">Price:</label>
                    <input type="number" class="form-control" id="price" placeholder="Price..." name="price" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <div class="mb-3">
                    <label for="pwd" class="form-label">Color:</label>
                    <input type="text" class="form-control" id="color" placeholder="Color..." name="color" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <div class="mb-3">
                    <label for="pwd" class="form-label">Product Type:</label>
                    <input type="text" class="form-control" id="type" placeholder="Product Type..." name="type"
                        required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <div class="mb-3">
                    <label for="pwd" class="form-label">Image Product :</label>
                    <input type="file" class="form-control" id="imageURL" placeholder="Image Product..." name="image"
                        required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>

                <button type="submit" class="btn btn-primary d-block mx-auto mb-5" style="width: 200px;">INSERT</button>
            </form>
        </div>
      <!-- ... Your HTML code ... -->

<script>
    try {
        const SubmitinsertProduct = document.getElementById("SubmitinsertProduct")

        SubmitinsertProduct.addEventListener("submit", async (event) => {
            event.preventDefault();

            const formData = new FormData();
            formData.append("name", document.getElementById("name").value);
            formData.append("price", document.getElementById("price").value);
            formData.append("color", document.getElementById("color").value);
            formData.append("type", document.getElementById("type").value);
            formData.append("image", document.getElementById("imageURL").files[0]);

            try {
                const response = await fetch("/insertProduct/Product", {
                    method: "POST",
                    body: formData,
                });

                if (response.status === 200) {
                    alert("Add product successfully");
                    document.getElementById("name").value = "";
                    document.getElementById("price").value = "";
                    document.getElementById("color").value = "";
                    document.getElementById("type").value = "";
                    document.getElementById("imageURL").value = "";
                } else {
                    alert("Add failed product or product already exists");
                }
            } catch (error) {
                console.error(error);
            }
        });
    } catch (error) {
        console.log(error);
    }
</script>



</body>

</html>